# EditorConfig helps maintain consistent formatting across editors/OS.
# This is intentionally minimal and aligned with running Linux containers.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{ps1,cmd,bat}]
end_of_line = crlf
